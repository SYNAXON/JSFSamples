<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <lifecycle>
        <phase-listener>
            de.synaxon.jsfsamples.LifeCycleListener
        </phase-listener>
    </lifecycle>
    <application>
        <resource-handler>de.synaxon.jsfsamples.handler.DelegatingResourceHandler</resource-handler>
        <message-bundle>de.synaxon.jsfsamples.config.Messages</message-bundle>
        <system-event-listener>
            <system-event-listener-class>
                de.synaxon.jsfsamples.ApplicationListener
            </system-event-listener-class>
            <system-event-class>
                javax.faces.event.PostConstructApplicationEvent
            </system-event-class>
        </system-event-listener>
        <resource-bundle>
            <base-name>de.synaxon.jsfsamples.config.MyResources</base-name>
            <var>myMessages</var>
        </resource-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
    </application>
    <factory>
        <exception-handler-factory>
            de.synaxon.jsfsamples.CustomExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
</faces-config>